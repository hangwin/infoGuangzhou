<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <com.hang.study.gzinfo.base.myViewPager
        android:id="@+id/content_vp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </com.hang.study.gzinfo.base.myViewPager>
    <RadioGroup
        android:background="@drawable/bottom_tab_bg"
        android:id="@+id/radios"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="75dp">
        <RadioButton
            android:checked="true"
            android:id="@+id/home"
            style="@style/bottom_tab_style"
            android:drawableTop="@drawable/home_selector"
            android:text="首页"
            />
        <RadioButton
            android:id="@+id/news"
            style="@style/bottom_tab_style"
            android:drawableTop="@drawable/news_selector"
            android:text="新闻中心"
            />
        <RadioButton
            android:id="@+id/smart"
            style="@style/bottom_tab_style"
            android:drawableTop="@drawable/smart_selector"
            android:text="智慧服务"
            />
        <RadioButton
            android:id="@+id/gov"
            style="@style/bottom_tab_style"
            android:drawableTop="@drawable/gov_selector"
            android:text="政务"
            />
        <RadioButton
            android:id="@+id/setting"
            style="@style/bottom_tab_style"
            android:drawableTop="@drawable/setting_selector"
            android:text="设置"
            />

    </RadioGroup>

</LinearLayout>